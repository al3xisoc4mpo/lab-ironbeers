<div class="col-md-4">
    <div class="card card-css">
        <img class="card-img-top beer-images" src="{{this.image_url}}" alt="beer-img" />
        <div class="card-body">
            <h5 class="card-title"><a href="/beers/{{this.id}}">{{this.name}}</a></h5>
            <h6 class="card-subtitle">{{this.tagline}}</h6>
            <p class="card-text">{{this.description}}</p>
        </div>
    </div>
</div>